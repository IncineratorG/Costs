<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.costs">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddNewEvent"
            android:screenOrientation="portrait" />
        <activity android:name=".StatisticMainScreenActivity" />
        <activity android:name=".StatisticDetailedActivity" />
        <activity android:name=".StatisticCostTypeDetailedActivity" />
        <activity android:name=".StatisticChosePeriodActivity" />
        <activity android:name=".StatisticChosenPeriodActivity"></activity>
    </application>

</manifest>