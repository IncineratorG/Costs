<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.costs">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InputDataActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".Periods"
            android:screenOrientation="portrait"/>
        <activity android:name=".AddNewEvent"
            android:screenOrientation="portrait"/>
        <activity android:name=".AddNewCostTypeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".DeleteCostTypeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".LastEnteredValuesActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ChosenDayEntriesActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".DayEntriesDetalisedActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
