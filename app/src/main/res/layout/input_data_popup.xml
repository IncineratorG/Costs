<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF9800">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="5dp"
            android:id="@+id/inputDataPopup_costSum" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF9800">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Промтовары"

            android:background="#FF9800"
            android:textSize="35sp"
            android:textColor="#FFFFFF"

            android:id="@+id/costTypeTextViewInInputDataPopup"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_marginLeft="5dp" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:id="@+id/inputDataPopup_note_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inputDataPopup_note_text_view"
            android:layout_weight="1"
            android:singleLine="true" />
    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/inputTextFieldEditTextInInputDataPopup"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="@drawable/edit_text_custom"
        android:inputType="number|numberSigned|numberDecimal"
        android:numeric="signed|integer|decimal"
        android:minHeight="70sp"

        android:textAlignment="center"
        android:textSize="50sp"
        android:gravity="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF9800"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="3">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textColor="@drawable/button_text_color"
                    android:id="@+id/seven"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_buttons_custom"
                    android:onClick="onInputDataPopupClickListener" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textColor="@drawable/button_text_color"
                    android:id="@+id/eight"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_buttons_custom"
                    android:onClick="onInputDataPopupClickListener" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textColor="@drawable/button_text_color"
                    android:id="@+id/nine"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_buttons_custom"
                    android:onClick="onInputDataPopupClickListener" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="3">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="@drawable/button_text_color"
                    android:id="@+id/four"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_buttons_custom"
                    android:onClick="onInputDataPopupClickListener" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="@drawable/button_text_color"
                    android:id="@+id/five"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_buttons_custom"
                    android:onClick="onInputDataPopupClickListener" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textColor="@drawable/button_text_color"
                    android:id="@+id/six"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_buttons_custom"
                    android:onClick="onInputDataPopupClickListener" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="3">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@drawable/button_text_color"
                    android:id="@+id/one"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_buttons_custom"
                    android:onClick="onInputDataPopupClickListener" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@drawable/button_text_color"
                    android:id="@+id/two"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_buttons_custom"
                    android:onClick="onInputDataPopupClickListener" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@drawable/button_text_color"
                    android:id="@+id/three"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_buttons_custom"
                    android:onClick="onInputDataPopupClickListener" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="3">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textColor="@drawable/button_text_color"
                    android:id="@+id/zero"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_buttons_custom"
                    android:onClick="onInputDataPopupClickListener" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="."
                    android:textColor="@drawable/button_text_color"
                    android:id="@+id/dot"
                    android:layout_weight="2"
                    android:background="@drawable/keyboard_buttons_custom"
                    android:onClick="onInputDataPopupClickListener" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:weightSum="4">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/input_data_popup_delete_btn"
                android:textColor="@drawable/button_text_color"
                android:id="@+id/del"
                android:layout_weight="3"
                android:background="@drawable/del_button_custom"
                android:onClick="onInputDataPopupClickListener" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/input_data_popup_ok_btn"
                android:textColor="@drawable/button_text_color"
                android:id="@+id/ok"
                android:layout_weight="1"
                android:background="@drawable/ok_button_custom"
                android:onClick="onInputDataPopupClickListener" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF9800">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2">

        <Button
            android:text="@string/input_data_popup_add_text_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inputDataPopup_add_text_btn"
            android:layout_weight="1"
            android:background="@drawable/keyboard_buttons_custom"
            android:textColor="@drawable/button_text_color"
            android:onClick="onInputDataPopupClickListener"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FF9800"></LinearLayout>

        <Button
            android:text="@string/input_data_popup_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/inputDataPopup_cancelButton"
            android:background="@drawable/keyboard_buttons_custom"
            android:textColor="@drawable/button_text_color"
            android:onClick="onInputDataPopupClickListener" />
    </LinearLayout>


</LinearLayout>