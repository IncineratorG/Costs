<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0sp"
    android:paddingRight="0sp"
    android:paddingTop="0sp"
    android:paddingBottom="0sp"
    tools:context="com.example.costs.InputDataActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/inputTextField"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/edit_text_custom"
        android:inputType="number|numberSigned|numberDecimal"
        android:numeric="signed|integer|decimal"
        android:minHeight="70sp"

        android:textSize="50sp"

        android:layout_below="@+id/costValue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ноябрь 2015"
        android:id="@+id/date"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relativeLayout" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000 руб."
        android:id="@+id/costValue"
        android:textAlignment="center"
        android:background="@drawable/keyboard_buttons_custom"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@+id/costsType"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10sp" />



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:id="@+id/relativeLayout">

    </RelativeLayout>






    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/relativeLayout"
        android:layout_toRightOf="@+id/relativeLayout"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/linearLayout">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"

                android:textSize="25sp"

                android:background="@drawable/keyboard_buttons_custom"
                android:id="@+id/one"
                style="@style/OnCustomDigitalKeyboardClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"

                android:textSize="25sp"

                android:background="@drawable/keyboard_buttons_custom"
                android:id="@+id/two"
                style="@style/OnCustomDigitalKeyboardClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"

                android:textSize="25sp"

                android:background="@drawable/keyboard_buttons_custom"
                android:id="@+id/three"
                style="@style/OnCustomDigitalKeyboardClick"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/linearLayout2">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"

                android:textSize="25sp"

                android:background="@drawable/keyboard_buttons_custom"
                android:id="@+id/four"
                style="@style/OnCustomDigitalKeyboardClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"

                android:textSize="25sp"

                android:background="@drawable/keyboard_buttons_custom"
                android:id="@+id/five"
                style="@style/OnCustomDigitalKeyboardClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"

                android:textSize="25sp"

                android:background="@drawable/keyboard_buttons_custom"
                android:id="@+id/six"
                style="@style/OnCustomDigitalKeyboardClick"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/linearLayout3">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"

                android:textSize="25sp"

                android:background="@drawable/keyboard_buttons_custom"
                android:id="@+id/seven"
                style="@style/OnCustomDigitalKeyboardClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"

                android:textSize="25sp"

                android:background="@drawable/keyboard_buttons_custom"
                android:id="@+id/eight"
                style="@style/OnCustomDigitalKeyboardClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"

                android:textSize="25sp"

                android:background="@drawable/keyboard_buttons_custom"
                android:id="@+id/nine"
                style="@style/OnCustomDigitalKeyboardClick"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:weightSum="1"
            android:layout_alignEnd="@+id/linearLayout3"
            android:layout_alignRight="@+id/linearLayout3"
            android:id="@+id/linearLayout4">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"

                android:textSize="25sp"

                android:background="@drawable/keyboard_buttons_custom"
                android:id="@+id/zero"
                android:layout_weight="1"
                style="@style/OnCustomDigitalKeyboardClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."

                android:textSize="25sp"

                android:background="@drawable/keyboard_buttons_custom"
                android:id="@+id/dot"
                android:layout_weight="1"
                style="@style/OnCustomDigitalKeyboardClick"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/linearLayout2"
            android:layout_toEndOf="@+id/linearLayout2"
            android:layout_toRightOf="@+id/linearLayout2"
            android:layout_alignBottom="@+id/linearLayout4">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"

                android:textSize="25sp"

                android:background="@drawable/keyboard_buttons_custom"
                android:id="@+id/add"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                style="@style/OnCustomDigitalKeyboardClick"/>
        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Del"

            android:textSize="25sp"

            android:background="@drawable/keyboard_buttons_custom"
            android:id="@+id/delete"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout"
            style="@style/OnCustomDigitalKeyboardClick"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/relativeLayout2">

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Категроия расходов"
        android:id="@+id/costsType"
        android:gravity="center"
        android:layout_below="@+id/date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
