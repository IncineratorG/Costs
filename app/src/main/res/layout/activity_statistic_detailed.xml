<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0sp"
    android:paddingLeft="0sp"
    android:paddingRight="0sp"
    android:paddingTop="0sp"
    tools:context=".StatisticDetailedActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="30 июня 2016"
                android:id="@+id/chosenDateStatisticDetailedActivity"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:textColor="@android:color/secondary_text_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="125000 руб."
                android:id="@+id/overallCostsStatisticDetailedActivity"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15sp"
                android:layout_weight="1"
                android:textColor="@android:color/primary_text_light" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF9800"></LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/costsListViewStatisticDetailedActivity"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp" />
    </LinearLayout>
</RelativeLayout>
